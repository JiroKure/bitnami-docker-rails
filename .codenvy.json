{
  "v": "4.0",
  "workspace": {
    "name": "rails",
    "defaultEnv": "rails",
    "environments": [
      {
        "name": "rails",
        "recipe": null,
        "machineConfigs": [
          {
            "name": "ws-machine",
            "limits": {
              "ram": 1000
            },
            "source": {
              "type": "dockerfile",
              "location": "https://raw.githubusercontent.com/bitnami/bitnami-docker-rails/che/.codenvy.dockerfile"    
            },
            "type": "docker",
            "dev": true
          }
        ]
      }
    ],
    "projects": [
      {
        "name": "rails-sample",
        "type": "blank",
        "path": "/rails-sample",
        "source": {
          "type": "git",
          "location": "https://github.com/bitnami/bitnami-docker-rails",
          "parameters": {
            "branch": "che",
            "keepVcs": "true"
          }
        },
        "mixins": [
          "git",
          "pullrequest"
        ],
        "attributes": {
          "local_branch": [ "che" ],
          "contribute_to_branch" : [ "master" ]
        },
        "modules": [],
        "problems": []
      }
    ],
    "commands": [
      {
        "name": "run",
        "type": "custom",
        "commandLine": "source /opt/bitnami/stacksmith-utils.sh && print_welcome_page && cd ${current.project.path} && bundle exec rails server -b 0.0.0.0 -p 3000",
        "attributes": {
          "previewUrl": "http://${server.port.3000}/"
        }
      },
      {
        "name": "create project - run first",
        "type": "custom",
        "commandLine": "source /opt/bitnami/stacksmith-utils.sh && print_welcome_page && harpoon start mariadb && cd ${current.project.path} && mv README.md README.github && rails new . --skip-bundle --database mysql && sed -Ei 's/\\s*#\\s*gem(.*)therubyracer/gem\\1therubyracer/' Gemfile && bundle install && bundle exec rails db:create && bundle exec rails db:migrate && bundle exec rails server -b 0.0.0.0 -p 3000",
        "attributes": {
          "previewUrl": "http://${server.port.3000}/"
        }
      }
    ]
  },
  "ide": {
    "onProjectsLoaded": {
      "actions": [
        {
          "id": "runCommand",
          "properties": {
            "name": "create project - run first"
          }
        }
      ]
    }
  }
}
